datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id            Int            @id @default(autoincrement())
    userID        String         @unique
    name          String
    wishlistItems WishlistItem[]
}

model WishlistItem {
    id        Int    @id @default(autoincrement())
    name      String
    link      String
    photoLink String
    price     Float
    userId    Int
    user      User   @relation(fields: [userId], references: [id])
}
